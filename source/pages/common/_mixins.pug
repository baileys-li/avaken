mixin pasteImage({src, width=false, height=false, alt=false, className=false, pictureClass=false, media=false, sizes=false})
	-const [name, format] = src.split('.');
	picture(class=pictureClass)
		if media
			each query, index in media
				source(srcset=`img/${sizes[index]}.avif`, type="image/avif", media=query)
				source(srcset=`img/${sizes[index]}.webp`, type="image/webp", media=query)
				source(srcset=`img/${sizes[index]}.${format}`, type=`image/${format}`, media=query)
		source(srcset=`img/${name}.avif`, type="image/avif")
		source(srcset=`img/${name}.webp`, type="image/webp")
		img(class=className, src=`img/${src}`, alt=alt, width=width, height=height)


mixin pasteSVGicon({icon, width=false, height=false, label=false, className=false, fill=false})
	-const hidden = label ? false : "true";
	-const role = label ? 'img' : false;
	svg(class=className, aria-hidden=hidden, aria-label=label, focusable="false", width=width, height=height, role=role, fill=fill )
		use(href=`icons.svg#${icon}`)
