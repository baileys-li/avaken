
article.carousel.main__intro
	._list
		each slide, index in ['Letâ€™s build something great!', 'Lorem ipsum dolor sit!', 'Velit repellendus libero']
			figure(class=`${!index && 'carousel__slide--current'}`)._slide
				+pasteImage({src: "carousel-image.jpg", width: 188, height: 319, alt: "Motivation", media: ["(min-width: 700px)"], sizes: ["carousel-image-big"]})
				figcaption._text
					strong._headline=slide
